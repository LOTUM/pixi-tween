{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "declaration": true,
    //"declarationDir": "dist",
    "outFile": "dist/index.js"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}