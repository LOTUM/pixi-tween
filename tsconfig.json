{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "types/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}